<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="sowersf">
  <!-- Database connection settings -->
  <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="connection.url">jdbc:mysql://192.168.1.9:3306/sower</property>
  <property name="connection.username">root</property>
  <property name="connection.password">password</property>
  <!-- JDBC connection pool (use the built-in) -->
  <property name="connection.pool_size">1</property>
  <!-- SQL dialect -->
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <!-- Enable Hibernate's automatic session context management -->
  <property name="current_session_context_class">thread</property>
  <!-- Disable the second-level cache -->
  <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
  <!-- Echo all executed SQL to stdout -->
  <property name="show_sql">true</property>
  <property name="hbm2ddl.auto">validate</property>
  
  <mapping class="com.sower.rdbms.pojo.User" resource="com/sower/rdbms/pojo/User.hbm.xml"/>
  <mapping class="com.sower.rdbms.pojo.UserAccess" resource="com/sower/rdbms/pojo/UserAccess.hbm.xml"/>
  <!-- 
		<mapping resource="com/vodafone/rdbms/pojo/ControlProcess.hbm.xml" />
		<mapping resource="com/vodafone/rdbms/pojo/ControlProcessDetail.hbm.xml" />
 -->
 </session-factory>
</hibernate-configuration>
